{
  "name": "pedidoaberto_comando",
  "version": "1.0.0",
  "description": "aplicação de processamento de comandos",
  "main": "index.ts",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^4.3.1",
    "@vendia/serverless-express": "^4.10.1",
    "aws-lambda": "^1.0.7",
    "aws-sdk": "^2.1209.0",
    "body-parser": "^1.20.0",
    "concurrently": "^7.3.0",
    "dotenv": "^16.0.2",
    "esbuild": "^0.15.6",
    "express": "^4.18.1",
    "tsc": "^2.0.4"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.102",
    "@types/express": "^4.17.13",
    "@types/node": "^18.7.14",
    "nodemon": "^2.0.19",
    "prisma": "^4.3.1",
    "typescript": "^4.8.2"
  },
  "scripts": {
    "prebuild": "rm -rf dist",
    "build": "esbuild index.ts --bundle --sourcemap --platform=node --target=es2020 --outfile=dist/index.js",
    "postbuild": "mkdir -p dist/node_modules/.prisma/client && cp node_modules/.prisma/client/libquery_engine-rhel-openssl-1.0.x.so.node dist/node_modules/.prisma/client/libquery_engine-rhel-openssl-1.0.x.so.node && cp infra/prisma/schema.prisma dist/schema.prisma && cd dist && zip -r index.zip .",
    "_build": "yarn tsc",
    "start": "node dist/index.js",
    "dev": "concurrently \"yarn tsc --watch\" \"nodemon -q dist/index.js\""
  },
  "prisma": {
    "schema": "infra/prisma/schema.prisma"
  }
}
